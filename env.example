# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCOUNT_ID=your-account-id

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_... # Use sk_test_ for development, sk_live_ for production
STRIPE_PUBLISHABLE_KEY=pk_live_... # Use pk_test_ for development, pk_live_ for production
STRIPE_WEBHOOK_SECRET=whsec_... # Webhook endpoint secret from Stripe dashboard
STRIPE_PRICE_SINGLE=price_... # Price ID for $29/mo single model plan (NO TRIAL)
STRIPE_PRICE_STARTER=price_... # Price ID for $99/mo starter plan (NO TRIAL)
STRIPE_PRICE_GROWTH=price_... # Price ID for $299/mo growth plan (NO TRIAL)

# Referral Configuration - NEW STRUCTURE
REFERRAL_KICKBACK_PERCENTAGE=10 # 10% of subscription goes to referee
EMPLOYEE_KICKBACK_PERCENTAGE=30 # 30% of referee amount goes to employee
COMPANY_KICKBACK_PERCENTAGE=70 # 70% of referee amount goes to company
REFERRAL_DURATION_MONTHS=6 # 6 months duration

# Employee Configuration
EMPLOYEE_USER_ID=your_employee_username # Cognito username of employee for payouts

# Development Settings
NODE_ENV=development
PYTHON_ENV=development

# Optional: Custom bucket names (CDK will generate if not provided)
# BUCKET_NAME=your-custom-bucket-name
# METADATA_TABLE_NAME=your-custom-table-name 

# Cognito (fill after CDK deploy outputs)
NEXT_PUBLIC_COGNITO_REGION=us-west-2
NEXT_PUBLIC_COGNITO_USER_POOL_ID=
NEXT_PUBLIC_COGNITO_USER_POOL_CLIENT_ID=

# Frontend Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_... # Same as STRIPE_PUBLISHABLE_KEY

# Subscription API Configuration
SUBSCRIPTION_API_URL=https://... # Will be set after CDK deployment
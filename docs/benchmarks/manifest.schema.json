{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://spaceport.dev/schemas/benchmark-manifest-1.0.0.json",
  "title": "Spaceport Benchmark Scene Manifest",
  "type": "object",
  "required": [
    "schema_version",
    "dataset",
    "scene",
    "source_url",
    "license_url",
    "download_timestamp",
    "expected_image_dirs",
    "paths",
    "reproducibility"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0.0"
    },
    "dataset": {
      "type": "string"
    },
    "scene": {
      "type": "string"
    },
    "source_url": {
      "type": "string"
    },
    "license_url": {
      "type": "string"
    },
    "download_timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "expected_image_dirs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "paths": {
      "type": "object",
      "required": [
        "raw_download",
        "normalized_scene"
      ],
      "properties": {
        "raw_download": {
          "type": "string"
        },
        "normalized_scene": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "reproducibility": {
      "type": "object",
      "required": [
        "scene_sha256",
        "total_files",
        "total_bytes",
        "files",
        "image_dirs"
      ],
      "properties": {
        "scene_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "total_files": {
          "type": "integer",
          "minimum": 0
        },
        "total_bytes": {
          "type": "integer",
          "minimum": 0
        },
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "path",
              "sha256",
              "size_bytes"
            ],
            "properties": {
              "path": {
                "type": "string"
              },
              "sha256": {
                "type": "string",
                "pattern": "^[a-f0-9]{64}$"
              },
              "size_bytes": {
                "type": "integer",
                "minimum": 0
              }
            },
            "additionalProperties": false
          }
        },
        "image_dirs": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": [
              "count",
              "resolutions"
            ],
            "properties": {
              "count": {
                "type": "integer",
                "minimum": 0
              },
              "resolutions": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "width",
                    "height",
                    "count"
                  ],
                  "properties": {
                    "width": {
                      "type": "integer",
                      "minimum": 1
                    },
                    "height": {
                      "type": "integer",
                      "minimum": 1
                    },
                    "count": {
                      "type": "integer",
                      "minimum": 1
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
